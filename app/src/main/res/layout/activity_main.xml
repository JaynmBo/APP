    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layout"
        layout="@layout/view_loading"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_gankio_welfare"
